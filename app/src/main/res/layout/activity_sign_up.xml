<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:padding="23dp"
    android:background="@color/white">



    <TextView
        android:id="@+id/signUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account"
        style="@style/heading_medium_24"
        android:textColor="@color/textLight"/>

    <TextView
        android:id="@+id/signUpSubtitle"
        android:layout_below="@+id/signUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete the sign up process to get started"
        style="@style/body_medium_14"
        android:textColor="@color/gray_dark"/>

    <TextView
        android:layout_below="@+id/signUpSubtitle"
        android:id="@+id/label_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        style="@style/body_medium_14"
        android:textColor="@color/gray_dark"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        style="@style/body_medium_14"
        android:id="@+id/edit_text_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_full_name"
        android:hint="Ivanov Ivan"
        android:textColorHint="@color/gray_light"
        android:textColor="@color/textLight"
        android:paddingLeft="10dp"
        android:paddingTop="14dp"
        android:paddingRight="10dp"
        android:paddingBottom="14dp"
        android:background="@drawable/edittext_border"/>

    <TextView
        style="@style/body_medium_14"
        android:textColor="@color/gray_dark"
        android:id="@+id/label_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:layout_below="@id/edit_text_full_name"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/edit_text_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_phone_number"
        android:inputType="phone"
        android:hint="+7(999)999-99-99"
        android:textColorHint="@color/gray_light"
        android:textColor="@color/textLight"
        android:paddingLeft="10dp"
        android:paddingTop="14dp"
        android:paddingRight="10dp"
        android:paddingBottom="14dp"
        android:background="@drawable/edittext_border"/>

    <TextView
        style="@style/body_medium_14"
        android:textColor="@color/gray_dark"
        android:id="@+id/label_email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:layout_below="@id/edit_text_phone_number"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/edit_text_email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_email_address"
        android:inputType="textEmailAddress"
        android:hint="***********@mail.com"
        android:textColorHint="@color/gray_light"
        android:textColor="@color/textLight"
        android:paddingLeft="10dp"
        android:paddingTop="14dp"
        android:paddingRight="10dp"
        android:paddingBottom="14dp"
        android:background="@drawable/edittext_border"/>






    <TextView
        android:id="@+id/label_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@id/edit_text_email_address"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/gray_dark"
        style="@style/body_medium_14"/>


    <RelativeLayout
        android:id="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_password">

        <EditText
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="**********"
            android:textColorHint="@color/gray_light"
            android:textColor="@color/textLight"
            android:paddingLeft="10dp"
            android:paddingTop="14dp"
            android:paddingRight="10dp"
            android:paddingBottom="14dp"
            android:background="@drawable/edittext_border"/>

        <RelativeLayout
            android:id="@+id/password_visibility_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/password_visibility_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/eyeslash"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/label_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm password"
        android:layout_below="@id/layout_password"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/gray_dark"
        style="@style/body_medium_14"/>

    <RelativeLayout
        android:id="@+id/layout_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_confirm_password">

        <EditText
            android:id="@+id/edit_text_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="**********"
            android:textColorHint="@color/gray_light"
            android:textColor="@color/textLight"
            android:paddingLeft="10dp"
            android:paddingTop="14dp"
            android:paddingRight="10dp"
            android:paddingBottom="14dp"
            android:background="@drawable/edittext_border"/>

        <RelativeLayout
            android:id="@+id/confirm_password_visibility_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/confirm_password_visibility_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/eyeslash"/>
        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_confirm_password"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:button="@drawable/custom_checkbox" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_dark"
            style="@style/body_regular_12"
            android:text="By ticking this box, you agree to our Terms and conditions and private policy"/>

    </LinearLayout>





</RelativeLayout>
